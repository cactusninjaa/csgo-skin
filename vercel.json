{
    "version": 2,
    "builds": [
      {
        "src": "api/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/dist" }
      }
    ],
    "routes": [
      {
        "src": "/api/skins",
        "dest": "/api/skins.js"
      },
      {
        "src": "/api/questions/:id",
        "dest": "/api/questions.js"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/dist/$1"
      }
    ]
  }